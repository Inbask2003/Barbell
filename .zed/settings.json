{
  "languages": {
    "Python": {
      // cspell is not needed, I just use it because I can't spell
      "language_servers": ["pyright", "ruff", "cspell"],
      "format_on_save": "on",
      "preferred_line_length": 120,
      "formatter": [
        {
          "code_actions": {
            // Fix all auto-fixable lint violations
            "source.fixAll.ruff": true,
            // Organize imports
            "source.organizeImports.ruff": true
          }
        }
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
